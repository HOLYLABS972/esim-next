[Unit]
Description=eSIM Email Processor
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/esim-backend
Environment="PATH=/usr/bin:/usr/local/bin"
ExecStart=/usr/bin/python3 /var/www/esim-backend/email_processor.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/email-processor.log
StandardError=append:/var/log/email-processor-error.log

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
